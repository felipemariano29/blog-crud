<%- include ("../../partials/header.ejs") %>

<body>
  <div class="container">
    <div class="card mt-5">
      <div class="card-header">
        <h2>Login</h2>
      </div>

      <div class="card-body">
        <form method="POST" action="/authenticate" class="form">
          <label class="mt-3" for="email">Email:</label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Insira o email"
            class="form-control"
          />

          <label class="mt-3" for="password">Senha:</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Insira a senha"
            class="form-control"
          />

          <button type="submit" class="btn btn-primary mt-3">Logar</button>
        </form>
      </div>
    </div>
  </div>
</body>

