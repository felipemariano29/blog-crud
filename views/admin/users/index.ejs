<%- include ("../../partials/header.ejs") %>

<body>
  <%- include ("../../partials/navbar.ejs") %>
  <div class="container">
    <h2 class="mt-5">Usuários</h2>

    <a href="/admin/users/create" class="btn btn-success mt-5 mb-5"
      >Novo usuário</a
    >

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Id</th>

          <th>Email</th>
        </tr>
      </thead>

      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>

          <td><%= user.email %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>

