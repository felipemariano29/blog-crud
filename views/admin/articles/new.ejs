<%- include ("../../partials/header.ejs") %>
<body>
  <%- include ("../../partials/navbar.ejs") %>

  <div class="container">
    <div class="card mt-5">
      <div class="card-header">
        <h2>Criar artigo</h2>
      </div>

      <div class="card-body">
        <form method="POST" action="/articles/save" class="text-center">
          <input
            type="text"
            name="title"
            id="title"
            placeholder="Defina o nome do artigo"
            class="form-control mb-3"
          />

          <textarea
            name="body"
            id="article"
            placeholder="Defina o conteÃºdo do artigo"
            class="form-control mb-3"
          ></textarea>

          <select name="category" id="category" class="form-control mt-3">
            <option value="">Selecione uma categoria</option>

            <% categories.forEach((category) => { %>
            <option value="<%- category.id %>"><%- category.title %></option>
            <% }); %>
          </select>

          <button class="btn btn-primary mt-3 w-25">Criar</button>
        </form>
      </div>
    </div>
  </div>
</body>

<%- include ("../../partials/footer.ejs") %>

<script src="/tinymce/tinymce.min.js"></script>
<script>
  tinymce.init({
    selector: "#article",
    plugins: [
      "advlist",
      "autolink",
      "lists",
      "link",
      "image",
      "print",
      "preview",
      "hr",
      "searchreplace",
      "wordcount",
      "fullscreen",
      "insertdatetime",
      "media",
      "save",
      "table",
      "paste",
      "code",
      "emoticons",
    ],
  });
</script>
